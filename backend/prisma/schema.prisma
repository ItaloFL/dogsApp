// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String
  password String

  Post    Post[]
  Coments Coments[]
  @@map("users")
}

model Post {
  id          String   @id @default(uuid())
  name        String
  peso        String
  idade       String
  image       String?
  user        User     @relation(fields: [author], references: [id])
  author      String
  coments     Coments? @relation(name: "MEUDEUS", fields: [postComents], references: [id])
  postComents String?

  Coments Coments[] @relation(name: "PostComent")
  @@map("posts")
}

model Coments {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [author], references: [id])
  author     String
  post       Post     @relation(name: "PostComent", fields: [postId], references: [id])
  postId     String   @unique
  coment     String
  created_at DateTime @default(now())

  Post Post[] @relation(name: "MEUDEUS")
  @@map("coments")
}
